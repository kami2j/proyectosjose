<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/actNombre"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:hint="Nombre del Producto"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/actDescripcion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Descripcion del Producto" />

    <EditText
        android:id="@+id/actCategoria"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Categoria del Producto"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/actColor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Color del Producto"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/actValor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Valor del Producto"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnUpdateData"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botones"
        android:backgroundTint="@color/divider_grey"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Actualizar Datos" />


</LinearLayout>