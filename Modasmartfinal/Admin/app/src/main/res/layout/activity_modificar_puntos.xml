<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ModificarPuntosActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Puntos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etNuevoPuntos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvTitulo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:hint="Ingresar los puntos" />

    <Button
        android:id="@+id/btnActualizarPuntos"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_below="@id/etNuevoPuntos"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="86dp"
        android:text="Actualizar Puntos" />

    <TextView
        android:id="@+id/CorreoUsuario2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNuevoPuntos"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="84dp"
        android:text="Correo"
        android:textSize="26sp" />


</RelativeLayout>
